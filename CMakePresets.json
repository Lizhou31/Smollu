{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Build",
            "description": "Default build configuration",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "OFF"
            }
        },
        {
            "name": "with-tests",
            "displayName": "Build with Tests",
            "description": "Build with unit tests enabled",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON"
            }
        },
        {
            "name": "debug", 
            "displayName": "Debug Build with Tests",
            "description": "Debug build with tests and full debugging info",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON",
                "CMAKE_C_FLAGS_DEBUG": "-g -O0 -Wall -Wextra"
            }
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "description": "Optimized release build",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTS": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "with-tests", 
            "configurePreset": "with-tests"
        },
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "with-tests",
            "output": {"outputOnFailure": true}
        },
        {
            "name": "verbose",
            "configurePreset": "with-tests", 
            "output": {"verbosity": "verbose"}
        }
    ]
}